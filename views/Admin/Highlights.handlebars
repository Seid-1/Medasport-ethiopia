<div class="container mt-5">
  <h2 class="text-center mb-4">Add Match Highlight</h2>
  <form
    action="/admin/highlights"
    method="POST"
    class="card p-4 shadow-lg bg-light rounded-4"
  >
    <div class="mb-3">
      <label for="title" class="form-label">Match Title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
      />
    </div>
    <div class="mb-3">
      <label for="youtube_link" class="form-label">YouTube Embed Link</label>
      <input
        type="text"
        class="form-control"
        id="youtube_link"
        name="youtube_link"
        placeholder="e.g. https://www.youtube.com/embed/VIDEO_ID"
        required
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
        rows="4"
      ></textarea>
    </div>
    <button type="submit" class="btn btn-success w-100">Upload Highlight</button>
  </form>

  <h4 class="mt-5">📋 Recent Highlights</h4>
  <ul class="list-group">
    {{#each highlights}}
      <li
        class="list-group-item d-flex justify-content-between align-items-center flex-wrap"
      >
        <div>
          <strong>{{this.title}}</strong><br />
          <small class="text-muted">{{this.created_at}}</small>
        </div>
        <form
          action="/admin/highlights/delete/{{this.id}}"
          method="POST"
          onsubmit="return confirm('Are you sure you want to delete this highlight?');"
          class="d-inline"
        >
          <button type="submit" class="btn btn-sm btn-danger mt-2">
            🗑️ Delete
          </button>
        </form>
      </li>
    {{/each}}
  </ul>

</div>