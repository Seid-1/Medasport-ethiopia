<div class="container py-5">
  <h2 class="mb-4">Admin Dashboard</h2>

  <div class="card mb-5">
    <div class="card-header bg-primary text-white fw-semibold">
      📝 Post New Article
    </div>
    <div class="card-body">
      <form action="/admin/post" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">News Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            placeholder="e.g:- PSG Win the Ucl for the first time in the club history!"
            required
          />
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image URL</label>
          <input
            type="text"
            class="form-control"
            id="image"
            name="image"
            placeholder="https://example.com/image.jpg"
          />
        </div>

        <div class="mb-3">
          <label for="summary" class="form-label">News Content</label>
          <textarea
            class="form-control"
            id="summary"
            name="summary"
            rows="5"
            placeholder="Write the full story here..."
            required
          ></textarea>
        </div>

        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select class="form-select" id="category" name="category">
            <option>Transfer</option>
            <option>Breaking News</option>
            <option>Injury Update</option>
            <option>Premier League</option>
            <option>Laliga</option>
            <option>Serie A</option>
            <option>Bundesliga</option>
            <option>Ligue 1</option>
            <option>Champions League</option>
            <option>Europe League</option>
            <option>Conference League</option>
            <option>Match Review</option>
            <option>Pre-match Review</option>
            <option>Post-match Review</option>
            <option>This Day in History</option>
            <option>Other Sports</option>
          </select>
        </div>

        <button type="submit" class="btn btn-success fw-semibold">
          📤 Post Article
        </button>
      </form>
    </div>
  </div>

  <h4 class="mt-4">📋 Recent Posts</h4>
  <ul class="list-group">
    {{#each recentPosts}}
      <li
        class="list-group-item d-flex justify-content-between align-items-center"
      >
        <div>
          <strong>{{this.title}}</strong><br />
          <small class="text-muted">{{this.category}}</small>
        </div>
        <div class="d-flex justify-content-end gap-2 flex-wrap mt-2">
          <a
            href="/admin/edit/{{this.id}}"
            class="btn btn-sm btn-warning d-flex align-items-center justify-content-center px-3"
            style="min-width: 100px;"
          >
            ✏️ Edit
          </a>
          <form
            action="/admin/delete/{{this.id}}"
            method="POST"
            onsubmit="return confirm('Are you sure you want to delete this post?');"
            class="d-inline"
          >
            <button
              type="submit"
              class="btn btn-sm btn-danger d-flex align-items-center justify-content-center px-3"
              style="min-width: 100px;"
            >
              🗑️ Delete
            </button>
          </form>
        </div>

      </li>
    {{/each}}
  </ul>

</div>