<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<style>
  body {
    background: radial-gradient(circle at top left, #e0f7fa, #fce4ec);
    min-height: 100vh;
    margin: 0;
    padding: 2rem;
  }

  .main-card {
    border-radius: 15px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    background-color: #fff;
    max-width: 900px;
    margin: auto;
  }

  .inner-card {
    border-bottom: 1px solid #dee2e6;
    padding: 1rem 0;
    transition: box-shadow 0.3s, transform 0.3s;
  }

  .inner-card:hover {
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
    transform: translateY(-2px);
  }

  .inner-card:last-child {
    border-bottom: none;
  }

  .nav-tabs {
    flex-wrap: nowrap;
    overflow-x: auto;
    white-space: nowrap;
    scrollbar-width: thin;
    scrollbar-color: #ccc transparent;
  }

  .nav-tabs::-webkit-scrollbar {
    height: 6px;
  }

  .nav-tabs::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 10px;
  }

  .nav-tabs::-webkit-scrollbar-track {
    background: transparent;
  }

  .nav-tabs .nav-link {
    font-weight: bold;
    color: #333;
    transition: transform 0.3s ease-in-out, background-color 0.3s;
  }

  .nav-tabs .nav-link.active {
    background-color: #0d6efd;
    color: white;
    border-radius: 8px;
  }

  .nav-tabs .nav-link:hover {
    transform: translateY(-2px);
  }

  .fade-in {
    animation: fadeIn 0.8s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<div class="main-card fade-in">
  <ul class="nav nav-tabs mb-3" id="competitionTabs" role="tablist">
    {{#each ["titles", "scorers", "assists", "hattricks", "freekicks", "keepers"]}}
      <li class="nav-item">
        <button
          class="nav-link {{#if @first}}active{{/if}}"
          id="{{this}}-tab"
          data-bs-toggle="tab"
          data-bs-target="#{{this}}"
          type="button"
          role="tab"
        >
          {{#if (eq this "titles")}}üèÜ Most Titles{{/if}}
          {{#if (eq this "scorers")}}‚öΩ Top Goal Scorers{{/if}}
          {{#if (eq this "assists")}}üéØ Most Assists{{/if}}
          {{#if (eq this "hattricks")}}üî• Most Hat-tricks{{/if}}
          {{#if (eq this "freekicks")}}üéØ Most Free-kicks{{/if}}
          {{#if (eq this "keepers")}}üß§ Legendary Keepers{{/if}}
        </button>
      </li>
    {{/each}}
  </ul>

  <div class="tab-content" id="competitionTabsContent">
    <div class="tab-pane fade show active" id="titles" role="tabpanel">
      {{#each titles}}
        <div class="inner-card">
          <h5>{{club_name}}</h5>
          <p><strong>Titles:</strong> {{titles}}</p>
        </div>
      {{/each}}
    </div>

    <div class="tab-pane fade" id="scorers" role="tabpanel">
      {{#each scorers}}
        <div class="inner-card">
          <h5>{{player_name}}</h5>
          <p>{{club_name}}</p>
          <p><strong>Goals:</strong> {{goals}}</p>
        </div>
      {{/each}}
    </div>

    <div class="tab-pane fade" id="assists" role="tabpanel">
      {{#each assists}}
        <div class="inner-card">
          <h5>{{player_name}}</h5>
          <p>{{club_name}}</p>
          <p><strong>Assists:</strong> {{assists}}</p>
        </div>
      {{/each}}
    </div>

    <div class="tab-pane fade" id="hattricks" role="tabpanel">
      {{#each hattricks}}
        <div class="inner-card">
          <h5>{{player_name}}</h5>
          <p>{{club_name}}</p>
          <p><strong>Hat-tricks:</strong> {{hattricks}}</p>
        </div>
      {{/each}}
    </div>

    <div class="tab-pane fade" id="freekicks" role="tabpanel">
      {{#each freekicks}}
        <div class="inner-card">
          <h5>{{player_name}}</h5>
          <p>{{club_name}}</p>
          <p><strong>Free-kick Goals:</strong> {{freekick_goals}}</p>
        </div>
      {{/each}}
    </div>

    <div class="tab-pane fade" id="keepers" role="tabpanel">
      {{#each keepers}}
        <div class="inner-card">
          <h5>{{player_name}}</h5>
          <p>{{club_name}}</p>
          <p><strong>Clean Sheets:</strong> {{clean_sheets}}</p>
        </div>
      {{/each}}
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
